@model myFinPort.Models.Budget

<div class="container">
  <div class="row">
    <div class="col-12 mx-1">
      <div class="card bg-light">
        <div class="card-header">
          <h3>Are you sure you want to delete this Budget?</h3>
        </div>
        <div class="card-body">
          <dl class="dl-horizontal">
            <dt>
              @Html.DisplayNameFor(model => model.Created)
            </dt>

            <dd>
              <div class="col-12 card bg-success text-dark p-1">
                @Html.DisplayFor(model => model.Created)
              </div>
            </dd>

            <dt>
              @Html.DisplayNameFor(model => model.BudgetName)
            </dt>

            <dd>
              <div class="col-12 card bg-success text-dark p-1">
                @Html.DisplayFor(model => model.BudgetName)
              </div>
            </dd>

            <dt>
              @Html.DisplayNameFor(model => model.CurrentAmount)
            </dt>

            <dd>
              <div class="col-12 card bg-success text-dark p-1">
                @Html.DisplayFor(model => model.CurrentAmount)
              </div>
            </dd>

          </dl>
          <p class="text-danger">
            This is a hard delete, which means you can not recover it later.
            Be sure you want to delete it.
          </p>
          <div class="modal-footer">
            @using (Html.BeginForm("Delete", "Budgets"))
            {
              @Html.AntiForgeryToken()
              @Html.HiddenFor(model => model.Id)
              <div class="form-actions no-color">
                @Html.ActionLink("Cancel", "Details", "Budgets", new { Id = Model.Id }, new { @class = "btn btn-light waves-effect mr-2" })
                <button type="submit" class="btn btn-danger waves-effect waves-light">Delete Budget</button>
              </div>
            }
            </div>
          </div>
        </div>
    </div>
  </div>
</div>

