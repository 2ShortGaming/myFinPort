@model myFinPort.Models.Budget

@using (Html.BeginForm("_EditBudgetModal", "Budgets"))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
  @Html.ValidationSummary(true, "", new { @class = "text-danger" })
  @Html.HiddenFor(model => model.Id)

  <div class="form-group">
    @Html.LabelFor(model => model.BudgetName, htmlAttributes: new { @class = "control-label col-md-10 text-success" })
    <div class="col-md-10">
      @Html.EditorFor(model => model.BudgetName, new { htmlAttributes = new { @class = "form-control" } })
      @Html.ValidationMessageFor(model => model.BudgetName, "", new { @class = "text-danger" })
    </div>
  </div>

  <div class="form-group">
    @Html.LabelFor(model => model.CurrentAmount, htmlAttributes: new { @class = "control-label col-md-10 text-success" })
    <div class="col-md-10">
      @Html.EditorFor(model => model.CurrentAmount, new { htmlAttributes = new { @class = "form-control" } })
      @Html.ValidationMessageFor(model => model.CurrentAmount, "", new { @class = "text-danger" })
    </div>
  </div>

  <div class="modal-footer">
    <button type="button" class="btn btn-light waves-effect mr-2" data-dismiss="modal">Close</button>
    <button type="submit" class="btn btn-danger waves-effect waves-light">Save Changes</button>
  </div>
</div>
}

