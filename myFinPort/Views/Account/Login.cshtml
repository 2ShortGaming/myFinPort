@using myFinPort.Models

@model LoginViewModel
@{
  Layout = null;
  ViewBag.Title = "Log in";
}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <!-- Tell the browser to be responsive to screen width -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">
  <!-- Favicon icon -->
  <link rel="icon" type="image/png" sizes="16x16" href="~/favicon.png">
  <title>My Financial Portal</title>
  <!-- Bootstrap Core CSS -->
  <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
  <link href="~/Content/all.css" rel="stylesheet" />
  <!-- Custom CSS -->
  <link href="~/Content/style.css" rel="stylesheet" />
  <!-- You can change the theme colors from here -->
  <link href="~/Content/blue-dark.css" rel="stylesheet" />
  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
  <![endif]-->
</head>

<body>
  <!-- ============================================================== -->
  <!-- Preloader - style you can find in spinners.css -->
  <!-- ============================================================== -->
  <div class="preloader">
    <svg class="circular" viewBox="25 25 50 50">
      <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
    </svg>
  </div>
  <!-- ============================================================== -->
  <!-- Main wrapper with content -->
  <!-- ============================================================== -->
  <section id="wrapper">
    <div class="login-register" style="background-image:url(/Images/login-register.png);">
      <div class="login-box card">
        <div class="card-body">
          <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal form-material", id = "loginform", role = "form" }))
            {
              @Html.AntiForgeryToken()
              <div class="row justify-content-between align-content-center">
                <div class="col-5 align-self-center">
                  <h3 class="box-title">Sign In</h3>
                </div>
                <div class="col-2 m-b-20">
                  <img src="~/Images/logo-icon.png" />
                </div>
              </div>

              @Html.ValidationSummary(true, "", new { @class = "text-danger" })

              <div class="form-group">
                <div class="col-xs-12">
                  @*<input class="form-control" type="text" placeholder="Username" name="email" />*@
                  @Html.TextBoxFor(m => m.Email, new { @class = "form-control px-2", placeholder = "Email" })
                  @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
              </div>

              <div class="form-group">
                <div class="col-xs-12">
                  @Html.PasswordFor(m => m.Password, new { @class = "form-control px-2", placeholder = "Password" })
                  @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
              </div>

              <div class="form-group row">
                <div class="col-8 check red">
                  <input type="checkbox" id="minimal-checkbox-1">
                  <label for="minimal-checkbox-1">  Remember me? </label>
                </div>
                <div class="col-4">
                  <!-- TODO: Need to style the Account/ForgotPassword view -->
                  @Html.ActionLink("Forgot pwd?", "ForgotPassword", "Account", null, new { @class = "text-info pull-right" })

                </div>
              </div>

              <div class="form-group text-center m-t-20">
                <div class="col-xs-12">
                  <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Log In</button>
                </div>
              </div>
              <hr />
            }
          </section>

          <div class="form-group m-b-0">
            <div class="col-sm-12 text-center">
              <div>
                Don't have an account?
                @Html.ActionLink("Sign Up", "Register", "Account", null, new { @class = "text-info m-l-5" })
              </div>
            </div>
          </div>

          <div class="form-group m-b-0">
            <div class="col-sm-12 text-center">
              <div>
                Try a demo login?
                @Html.ActionLink("Demo Login", "DemoLogin", "Account", null, new { @class = "text-info m-l-5" })
              </div>
            </div>
          </div>

          <hr />

          <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 m-t-10 text-center">
              <p class="mb-2">Authenticate with a social account?</p>
              <div class="social">
                <section id="socialLoginForm">
                  <a href="javascript:void(0)" class="btn  btn-facebook" data-toggle="tooltip" title="Login with Facebook"> <i aria-hidden="true" class="fa fa-facebook"></i> </a>
                  <a href="javascript:void(0)" class="btn btn-googleplus" data-toggle="tooltip" title="Login with Google"> <i aria-hidden="true" class="fa fa-google-plus"></i> </a>

                  <!-- TODO: need to create and style the _externalLoginsListPartial view -->
                  @*@Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })*@
                </section>
              </div>
            </div>
          </div>


        </div>
      </div>
    </div>
  </section>
  <!-- ============================================================== -->
  <!-- End Wrapper -->
  <!-- ============================================================== -->
  <!-- ============================================================== -->
  <!-- All Jquery -->
  <!-- ============================================================== -->
  <script src="~/Scripts/jquery.min.js"></script>
  <!-- Bootstrap tether Core JavaScript -->
  <script src="~/Scripts/popper.min.js"></script>
  <script src="~/Scripts/bootstrap.min.js"></script>
  <!-- slimscrollbar scrollbar JavaScript -->
  <script src="~/Scripts/jquery.slimscroll.js"></script>
  <!--Wave Effects -->
  <script src="~/Scripts/waves.js"></script>
  <!--Menu sidebar -->
  <script src="~/Scripts/sidebarmenu.js"></script>
  <!--stickey kit -->
  <script src="~/Scripts/sticky-kit.min.js"></script>
  <script src="~/Scripts/jquery.sparkline.min.js"></script>
  <!--Custom JavaScript -->
  <script src="~/Scripts/custom.min.js"></script>
  <!-- icheck -->
  <script src="~/Scripts/icheck.min.js"></script>
  <script src="~/Scripts/icheck.init.js"></script>
  <!-- ============================================================== -->
  <!-- Style switcher -->
  <!-- ============================================================== -->
  <script src="~/Scripts/jQuery.style.switcher.js"></script>
</body>

</html>