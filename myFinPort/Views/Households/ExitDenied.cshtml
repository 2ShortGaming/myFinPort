
@{
  ViewBag.Title = "ExitDenied";
}

<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h3>Leaving Household</h3>
        </div>
        <div class="card-body">
          <h4 class="card-title">Before you can leave...</h4>
          <div class="row">
            <div class="col-6">
              <div class="card bg-dark p-3">
                <p class="card-text">
                  Since you are the head of the household, and you are not the only one in the household,
                  you must assign one of the remaining household members to be the new head of household.
                </p>
              </div>

            </div>
            <div class="col-6">
              <div class="card bg-dark p-3">
                @using (Html.BeginForm("ChangeHead", "Households", FormMethod.Post))
                {
                  @Html.AntiForgeryToken();
                  <div class="row">
                    <div class="col text-center mb-4">
                      @Html.DropDownList("NewHoH", null, "--Choose New Head--", new { @class = "bg-light text-secondary mt-1" })
                    </div>
                  </div>
                  <div class="row">
                    <div class="col text-center">
                      <button type="submit" name="Leave" value="false" class="btn btn-primary">Reassign</button>
                      <button type="submit" name="Leave" value="true" class="btn btn-primary">Reassign and Leave</button>
                    </div>
                  </div>
                }
                @*@Html.ActionLink("Choose new Head of Household", "ChangeHead", "Households", new { @class = "btn btn-success" })*@
              </div>
            </div>
          </div>
          <div class="row justify-content-center">
            @Html.ActionLink("Cancel", "Dashboard", "Home", new { @class = "btn btn-light" })
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
